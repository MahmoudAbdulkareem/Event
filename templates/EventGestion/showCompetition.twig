<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Management</title>
  <!-- CSS -->
  <link href="{{asset('components/Form/assets/css/style.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/bootstrap-icons/bootstrap-icons.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/boxicons/css/boxicons.min.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/quill/quill.snow.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/quill/quill.bubble.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/remixicon/remixicon.css')}}" rel="stylesheet">
  <link href="{{asset('components/Form/assets/vendor/simple-datatables/style.css')}}" rel="stylesheet">

  <style>
    /* Additional styles to improve organization */
    .table-container {
        margin-top: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-container table {
        width: 100%;
        border-collapse: collapse;
    }

    .table-container th, .table-container td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }

    .table-container th:last-child, .table-container td:last-child {
        border-right: none;
    }

    .table-container th {
        background-color: #f2f2f2;
        border-bottom: 2px solid #ddd;
    }

    .logo-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .edit-delete-buttons a {
        margin-right: 5px;
    }

    /* Centered button */
    .add-event-button {
        text-align: center;
        margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="logo-container">
          <img src="{{ asset('home/assets/img/logo.png') }}" alt="Edulance Logo">
        </div>

        <!-- Add button -->
        <div class="add-event-button">
          <a href="{{ path('app_add') }}" class="btn btn-primary">Add Competition</a>
        </div>

        <div class="form-container">
          {% if comp is defined %}
              {% if comp is iterable %}
                  <div class="table-container">
                      <table class="table">
                          <thead>
                              <tr>
                                  <th>ID</th>
                                  <th>Name</th>
                                  <th>Location</th>
                                  <th>Description</th>
                                  <th>Groups</th>
                              </tr>
                          </thead>
                          
                          <tbody>
                              {% for competition in comp %}
                                  <tr>
                                      <td>{{ competition.id }}</td>
                                      <td>{{ competition.Name }}</td>
                                      <td>{{ competition.location }}</td>
                                      <td>{{ competition.description }}</td>
                                      <td>{{ competition.groupe }}</td>
                                      <td class="edit-delete-buttons">
                                          <a href="{{ path('app_editz', {'id': competition.id}) }}">Edit</a>
                                          <a href="{{ path('app_del', {'id': competition.id}) }}" onclick="return confirm('Are you sure you want to delete this event?')">Delete</a>
                                      </td>
                                  </tr>
                              {% endfor %}
                          </tbody>
                      </table>
                  </div>
              {% endif %}
          {% else %}
              No Result Has Been Found In The System
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <!-- JS -->
  <script src="{{asset('components/Form/assets/vendor/apexcharts/apexcharts.min.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/chart.js/chart.umd.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/echarts/echarts.min.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/quill/quill.min.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/simple-datatables/simple-datatables.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/tinymce/tinymce.min.js')}}"></script>
  <script src="{{asset('components/Form/assets/vendor/php-email-form/validate.js')}}"></script>

  <!-- Template Main JS File -->
  <script src="{{asset('components/Form/assets/js/main.js')}}"></script>
</body>
</html>
