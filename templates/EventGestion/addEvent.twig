<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Event</title>
    <!-- CSS -->
    <link href="{{ asset('components/Form/assets/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/boxicons/css/boxicons.min.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/quill/quill.snow.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/quill/quill.bubble.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/remixicon/remixicon.css') }}" rel="stylesheet">
    <link href="{{ asset('components/Form/assets/vendor/simple-datatables/style.css') }}" rel="stylesheet">

    <style>
        /* Additional custom styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        img {
            display: block;
            margin: 0 auto;
            width: 200px;
            margin-bottom: 20px;
        }

        /* Other styles as before */
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="logo-container">
                <img src="{{ asset('home/assets/img/logo.png') }}" alt="Edulance Logo">
            </div>
            <div class="form-container">
                {% block body %}
                    <section class="section">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Event Details</h5>
                                        <!-- Event Details Form -->
                                        {{ form_start(Event) }}
                                        <div class="row mb-3">
                                            <label for="event_name" class="col-sm-2 col-form-label required"></label>
                                            <div class="col-sm-10">
                                                {{ form_row(Event.name, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="event_location" class="col-sm-2 col-form-label required"></label>
                                            <div class="col-sm-10">
                                                {{ form_row(Event.location, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="event_type" class="col-sm-2 col-form-label required"></label>
                                            <div class="col-sm-10">
                                                {{ form_row(Event.type, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="event_details" class="col-sm-2 col-form-label required"></label>
                                            <div class="col-sm-10">
                                                {{ form_row(Event.details, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="event_city" class="col-sm-2 col-form-label required"></label>
                                            <div class="col-sm-10">
                                                {{ form_row(Event.city, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                                            </div>
                                        </div>
                                        <div class="row mb-3 justify-content-center"> <!-- Center the button -->
                                            <div class="col-sm-10"> <!-- Adjust the button's width -->
                                                <button type="submit" class="btn btn-primary btn-block">Ajouter</button> <!-- Make the button full-width -->
                                            </div>
                                        </div>
                                        <!-- End Event Details Form -->
                                        {{ form_end(Event) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                {% endblock %}
            </div>
        </div>
    </div>
</div>

<!-- JS -->
<script src="{{asset('components/Form/assets/vendor/apexcharts/apexcharts.min.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/chart.js/chart.umd.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/echarts/echarts.min.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/quill/quill.min.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/simple-datatables/simple-datatables.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/tinymce/tinymce.min.js')}}"></script>
<script src="{{asset('components/Form/assets/vendor/php-email-form/validate.js')}}"></script>

<!-- Template Main JS File -->
<script src="{{asset('components/Form/assets/js/main.js')}}"></script>
</body>
</html>
